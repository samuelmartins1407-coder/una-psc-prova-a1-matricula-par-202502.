public class ArattaiGrowthTracker {
    public static void main(String[] args) {
  //iniciando arrays
int[] downloadsDiarios = {850000, 1050000, 1100000, 950000, 1200000, 1000000, 850000};
String[] diasDaSemana = {"Dom", "Seg", "Ter", "Qua", "Qui", "Sex", "Sáb"};

//Calculo do dowload
    int totalDownloads = 0;
    for (int downloads : downloadsDiarios) {
totalDownloads += downloads;
}
    System.out.println(" R2 Analise de Crescimento do Arattai, 7 dias");
    System.out.println("\n Downloads na Semana: " + totalDownloads);

          //Olhando pico e minimo
        int pico = downloadsDiarios[0];
        int minimo = downloadsDiarios[0];
        int indicePico = 0;
        int indiceMinimo = 0;

    for (int i= 1; i < downloadsDiarios.length; i++) {
        if (downloadsDiarios[i]>pico) {
pico= downloadsDiarios[i];
indicePico=i;
}
    if (downloadsDiarios[i]<minimo) {
        minimo=downloadsDiarios[i];
        indiceMinimo= i;
}
        
    }

        System.out.println("\n R3 Analise de Extremos:");
        System.out.println("Dia da semana com pico de Downloads: " + diasDaSemana[indicePico] + " com "+ pico +" downloads.");
        System.out.println("Dia da semana com Mínimo de Downloads: " + diasDaSemana[indiceMinimo] + "com" + minimo + " downloads.");

    //Metas
    int metaDiaria = 1000000;
    int diasAcimaDaMeta = 0;

        System.out.println("\n R4 Analise de Metas (Meta Diaria: "+ metaDiaria + "):");
    for (int i = 0; i < downloadsDiarios.length; i++) {
        if (downloadsDiarios[i] > metaDiaria) {
        System.out.println("  > " + diasDaSemana[i] +": sucesso! (" + downloadsDiarios[i] + " downloads)");
diasAcimaDaMeta++;
} else {
    System.out.println("  > " + diasDaSemana[i] +": Não atingiu. (" + downloadsDiarios[i] + " downloads)");
    }
}

    System.out.println("\n[Relatório Final] O Arattai superou a meta diaria em " + diasAcimaDaMeta + " dias esta semana.");
}
}
}

    System.out.println("\n[Relatório Final] O Arattai superou a meta diaria em " + diasAcimaDaMeta + " dias esta semana.");
}
}
